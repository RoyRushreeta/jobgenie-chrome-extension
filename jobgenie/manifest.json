{
  "manifest_version": 3,
  "name": "Job Genie",
  "version": "1.0",
  "description": "Search for jobs by role from multiple job portals.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.indeed.com/*"
  ]
}
