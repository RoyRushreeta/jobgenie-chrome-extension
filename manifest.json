{
  "manifest_version": 3,
  "name": "Job Genie",
  "version": "1.0",
  "description": "Analyze job descriptions against your resume using AI. Get match %, strengths, gaps, resume improvements, and targeted interview questions instantly.",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Genie",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
